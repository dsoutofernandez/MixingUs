<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dani.mixingus.LoginActivity"
    android:weightSum="1">

    <!-- Login progress -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Iniciar sesión..."
        android:id="@+id/textView6"
        android:layout_gravity="center_horizontal"
        android:textColor="#4b76a3"
        android:textSize="@dimen/abc_action_bar_progress_bar_size"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.36">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="247dp"
            android:layout_height="302dp"
            android:layout_gravity="center">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/CajaCorreoIni"
                android:layout_below="@+id/textView3"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_horizontal"
                android:hint="Correo..." />

            <EditText
                android:id="@+id/CajaContraIni"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contraseña..."
                android:imeActionId="@+id/botonLogin"
                android:imeActionLabel="@string/action_sign_in_short"
                android:imeOptions="actionUnspecified"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true" />

            <Button
                style="?android:textAppearanceSmall"
                android:id="@+id/botonLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Entra a MixingUs"
                android:background="#316f98"
                android:textStyle="bold"
                android:textColor="#ffffff" />
        </LinearLayout>

        <ImageView
            android:layout_width="134dp"
            android:layout_height="156dp"
            android:id="@+id/imageView2"
            android:layout_gravity="center_horizontal|bottom"
            android:focusable="false"
            android:background="@mipmap/ic_launcher" />

    </FrameLayout>

    <Button
        android:layout_width="240dp"
        android:layout_height="37dp"
        android:text="Quiero registrarme Por favor!!"
        android:id="@+id/botonRegistroLogin"
        android:textColor="#ffffff"
        android:background="#598d59"
        android:textStyle="bold" />

</LinearLayout>
